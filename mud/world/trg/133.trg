      drop all
    break
    case 3
      case 4
        mload obj 13304
        дать все %actor.name%
        drop all
      break
      case 5
        case 6
          say Вот эту странную вещь мне отдал человек, которого мы подобрали в море, плавающим на обломке корабля.
          say По его словам, в нем содержится секрет какого-то могучего волшебства.
          mload obj 1719
          give пергам .%actor.name%
        break
        default
          wait 3
          if (%random.1000% <= 200) && (%world.curobjs(207)% < 50)
            mload obj 207
            give руна .%actor.name%
          else
            %self.gold(5000)%
            дать 5000 кун %actor.name%
          end
          drop all
        done
        detach 13307 %self.id%
        detach 13302 %self.id%
